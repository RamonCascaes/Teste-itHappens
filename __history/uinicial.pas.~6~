unit uinicial;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.Menus, Vcl.StdCtrls, Vcl.ExtCtrls;

type
   Tfiltro_filial = record
          codfil : integer;
          descri : string;
   end;

 type
   Tfiltro_produto = record
          codpro : integer;
          descri : string;
   end;

type
  Tfinicial = class(TForm)
    MainMenu1: TMainMenu;
    Cadastro1: TMenuItem;
    Produtos1: TMenuItem;
    Filial1: TMenuItem;
    Pedidos1: TMenuItem;
    Entrada1: TMenuItem;
    Saida1: TMenuItem;
    painel_filial: TPanel;
    Label1: TLabel;
    Label2: TLabel;
    Edit1: TEdit;
    Edit2: TEdit;
    Combo: TComboBox;
    Label3: TLabel;
    salvar: TButton;
    deletar: TButton;
    Button1: TButton;
    procedure Produtos1Click(Sender: TObject);
    procedure Filial1Click(Sender: TObject);
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
    ffilial  : Tfiltro_filial;
    fproduto : Tfiltro_produto;
    procedure Visualizacao(cod :integer);
    procedure Save_filial(codigo : Integer; descri : string);
  end;

var
  finicial: Tfinicial;

implementation
uses cadastro_filial,cadastro_produto;
{$R *.dfm}

procedure Tfinicial.Button1Click(Sender: TObject);
begin
  Close;
end;

procedure Tfinicial.Filial1Click(Sender: TObject);
begin
   painel_filial.Visible := True;
end;

procedure Tfinicial.Produtos1Click(Sender: TObject);
var pro : Tfcasdastro_produto;
begin
     pro := Tfcasdastro_produto.Create(nil);
     pro.ShowModal;
     pro.Destroy;
end;

procedure Tfinicial.Save_filial(codigo: Integer; descri: string);
begin
   ffilial.codfil := codigo;
   ffilial.descri := descri;
end;

procedure Tfinicial.Visualizacao(cod: integer);
begin
    case cod of
      0 :
         begin
             painel_filial.Visible := True;
             painel_filial.Align   := alclient;
         end;

    end;

end;

end.
